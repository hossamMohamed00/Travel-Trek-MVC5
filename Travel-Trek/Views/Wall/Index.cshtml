@model Travel_Trek.ViewModels.WallViewModel
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/WallLayout.cshtml";
}
<section>

    @if (Model.Posts.Any())
    {

        <div class="row" id="posts">
            @foreach (var post in Model.Posts)
            {
                {
                    /* Check for data provided */
                    post.TripDetails = string.IsNullOrEmpty(post.TripDetails) ? "No Details provided for this trip. 😑" : post.TripDetails;
                }
                <div class="col">
                    <h4 class="trip-title">@post.TripTitle</h4>
                    <div class="card" style="width: 18rem;margin-bottom: 10px">
                        <img class="card-img-top" src="@post.TripImage" alt="@post.TripTitle">
                        <div class="card-body">
                            <h5 class="card-title">From: @post.Agency.FirstName</h5>
                            <p class="card-text">Destination: @post.TripDestination
                            <p class="card-text">Details: @post.TripDetails
                            <p class="card-text">Trip Date: @post.TripDate.ToLongDateString()</p>

                            <!--Buttons-->
                            <button type="button" id="likeBtn" class="btn btn-primary js-like" data-post-id="@post.Id" onclick="likePost(this)">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-hand-thumbs-up-fill" viewBox="0 0 16 16">
                                    <path d="M6.956 1.745C7.021.81 7.908.087 8.864.325l.261.066c.463.116.874.456 1.012.965.22.816.533 2.511.062 4.51a9.84 9.84 0 0 1 .443-.051c.713-.065 1.669-.072 2.516.21.518.173.994.681 1.2 1.273.184.532.16 1.162-.234 1.733.058.119.103.242.138.363.077.27.113.567.113.856 0 .289-.036.586-.113.856-.039.135-.09.273-.16.404.169.387.107.819-.003 1.148a3.163 3.163 0 0 1-.488.901c.054.152.076.312.076.465 0 .305-.089.625-.253.912C13.1 15.522 12.437 16 11.5 16H8c-.605 0-1.07-.081-1.466-.218a4.82 4.82 0 0 1-.97-.484l-.048-.03c-.504-.307-.999-.609-2.068-.722C2.682 14.464 2 13.846 2 13V9c0-.85.685-1.432 1.357-1.615.849-.232 1.574-.787 2.132-1.41.56-.627.914-1.28 1.039-1.639.199-.575.356-1.539.428-2.59z"></path>
                                </svg>
                            </button>
                            <div class="badge bg-success likes-badge" id="num-of-likes">
                                @post.Likes likes
                            </div>

                            <a href="#" class="btn btn-secondary float-lg-right">Save</a>


                        </div>

                        <!-- Card footer-->
                        <div class="card-footer">
                            <text class="text-muted">Posted at @post.PostDate.ToLongDateString()</text>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="is-empty">
            <h3>No Posts for Now..!</h3>
        </div>
    }


</section>


<script type="text/javascript">
    /* toggle like button class */
    function likePost(post) {
        @{
            bool IsAuthenticated = (User.Identity.IsAuthenticated);
            //* This will be False or True
        }

        if ('@IsAuthenticated' == 'True') {
            post.classList.toggle("likedBtn");
        } else {
            // Suggest to login first
            bootbox.alert("Please login first to be able to like trip posts 😉😄");
        }


    }
</script>

@section scripts
{
    <script>
        /* Like Post Logic*/
        $(document).ready(function() {
            $("#posts").on("click", ".js-like",function () {
                console.log("CLicked");

                // Get reference for the button
                var button = $(this);

                // Get post id
                var postId = button.attr("data-post-id");

                //* Get number of likes div
                var cardBody = button.parents(".card-body");
                console.log(cardBody);

                var numOfLikes = cardBody.children("num-of-likes");

                //var numOfLikes = cardBody.childs("#num-of-likes");

                $.ajax({
                    url: '@Url.Action("LikePost", "Wall")',
                    dataType: "json",
                    type: "POST",
                    data: {
                        id: postId
                    },
                    success: function(data) {
                        if (data.success) {
                            console.log("Liked post!");

                            //* Increase the number of likes
                            numOfLikes.innerHTML = data.likes + " likes."
                        }else {
                            bootbox.alert('Cannot like this post right now 😭😭!');
                        }
                    },
                    error: function(xhr) {
                        console.log(xhr);
                        bootbox.alert('Cannot like this post right now 😭😭!');
                    }
                })
            });
        })
    </script>
}
