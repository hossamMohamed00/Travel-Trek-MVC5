@model Travel_Trek.ViewModels.WallViewModel

<div class="form_overlay" id="login">
    <div class="form-login animation container  ">
        <div class="row">
            <div class="form-group col-12">
                <h2 style="text-align: center">Log <span class="text-primary">In</span></h2>
            </div>
        </div>
        @using (Ajax.BeginForm("Login", "Account", null, new AjaxOptions() { HttpMethod = "POST", OnSuccess = "LoginUser" }))
        {
            @Html.ValidationSummary(true)

            <div class="form-group">
                @Html.LabelFor(model => model.Login.Email, new { @class = "control-label col-md-2 font-weight-bold" }) 
                @Html.EditorFor(model => model.Login.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "Type your email here!", @autofocus = "autofocus" } })
                @Html.ValidationMessageFor(model => model.Login.Email, "", new { @class = "text-danger", })
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Login.Password, new { @class = "control-label col-md-2 font-weight-bold" }) 
                @Html.EditorFor(model => model.Login.Password, new { htmlAttributes = new { @class = "form-control", id = "password", @placeholder = "Type your password" } })
                @Html.ValidationMessageFor(model => model.Login.Password, "", new { @class = "text-danger" })

            </div>
            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="passwordInput" onclick="togglePassword()" >
                <label class="form-check-label font-weight-bold" for="passwordInput">Show Password</label>
            </div>

            <div class="form-text">
                <p>Don't have an account 🤔? <a href="#" class="link" onclick="showRegister()">Create account</a></p>
            </div>

            @Html.AntiForgeryToken()
            <input id="login" type="submit" name="submit" value="Login" class="btn btn-primary " style=" margin: 15px 0 15px 36% ">
        }

    </div>
</div>