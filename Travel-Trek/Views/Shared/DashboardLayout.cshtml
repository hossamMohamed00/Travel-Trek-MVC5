<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Admin Dashboard</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        @Html.ActionLink("Travel Trek", "Index", "Dashboard", new { area = "" }, new { @class = "navbar-brand" })
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">@Html.ActionLink("Profile", "Profile", "Dashboard", new {@class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Users", "AllUsers", "Dashboard", new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Posts", "AllPosts", "Dashboard", new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Posts Requests", "PendingPosts", "Dashboard", new { @class = "nav-link" })</li>
            </ul>
            <ul class="nav navbar-nav ml-auto ">
                <li>@Html.ActionLink("Logout", "logout", "", new {@class = "nav-link" })</li>
            </ul>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Travel Trek</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
