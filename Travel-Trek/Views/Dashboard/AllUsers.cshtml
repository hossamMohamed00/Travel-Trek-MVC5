@model IEnumerable<Travel_Trek.Models.Person>

@{
    ViewBag.Title = "AllUsers";
    Layout = "~/Views/Shared/DashboardLayout.cshtml";
}


<section>
    <h2>All Users</h2>
    <hr />

    @if (Model.Any())
    {
        <p class="Header_subtitle">
            The Following list contains all users (Agencies and Traveller) on the system.
        </p>

        <div style="margin-bottom: 10px">
            @Html.ActionLink("Create New User", "Create", null, new { @class = "btn btn-primary" })
        </div>

        <table id="users" class="table table-striped table-hover table-bordered" style="width: 100%">
            <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.UserRole)
                </th>

                <th>
                    Actions
                </th>
            </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tbody>
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserRole.Name)

                    </td>
                    <td>
                            
                        <button data-user-id="@item.Id" class="btn btn-outline-danger js-delete">Delete</button>

                        <!--@Html.ActionLink("Delete", "Delete", new {id = item.Id}, new
                            {
                                @class = "",
                                id = item.Id
                            })--> 
                    </td>
                </tr>
                </tbody>
            }
        </table>
    }
    else
    {
        <div class="is-empty">
            <h3>No Users Available..!</h3>
        </div>

    }
</section>
    

<!-- JQuery to handle delete user-->
@section scripts
{
    <script>
        $(document).ready(function () {
            //* Usage of jquery data tables
            $("#users").DataTable();


            $("#users").on("click", ".js-delete",
                function() {
                    // Get reference for the button
                    var button = $(this);

                    bootbox.confirm({
                        message: "Are you sure you want to delete this user ? 🙄",
                        buttons: {
                            cancel: {
                                label: 'Cancel',
                                className: 'btn-danger'
                            },
                            confirm: {
                                label: 'Confirm',
                                className: 'btn-success'
                            }
                        },
                        callback: function(result) {

                            if (result) {
                                console.log("Deleting User...✌");
                                // Send the ajax request
                                $.ajax({
                                    url: '@Url.Action("Delete", "Dashboard")',
                                    dataType: "json",
                                    type: "POST",
                                    data: {
                                        id: button.attr("data-user-id")
                                    }, // here you can pass arguments to your request if you need
                                    success: function(data) {
                                        if (data.success) {

                                            button.parents("tr").remove();

                                        } else {
                                            alert('Cannot Delete this user right now 😭😭!');
                                        }
                                    },
                                    error: function(xhr) {
                                        console.log(xhr);
                                        bootbox.alert('Cannot delete this user right now 😭😭!');
                                    }
                                });
                            } else {
                                // User click cancel
                                console.log("You decided not to delete the user 👍😃");
                            }
                        }
                    });
                });
        });
    </script>
}
