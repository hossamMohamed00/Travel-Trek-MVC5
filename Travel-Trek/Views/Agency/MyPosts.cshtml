@model IEnumerable<Travel_Trek.Models.Post>

@{
    ViewBag.Title = "MyPosts";
    Layout = "~/Views/Shared/FactoryLayout.cshtml";
}
<section>

    @if (Model.Any())
    {
        <div class="row">
        @foreach(var post in Model)
        {

                <div class="col-4">
                    <div class="card" style="width: 18rem; margin-bottom: 12px">
                        <img class="card-img-top" src="@post.TripImage" alt="@post.TripTitle">
                        <div class="card-body">
                            <h5 class="card-title">@post.Agency.FirstName @post.Agency.LastName </h5>
                            <p class="card-text"> @post.TripDetails</p>
                            <p class="card-text"> @post.TripDestination</p>
                            <p class="card-text"> @post.TripDate</p>

                            <!-- Delete , Update-->
                            <a href="#" class="btn btn-primary float-lg-left">Update</a>
                            <a href="@Url.Action("DeletePost", new {id = @post.Id})" class="btn btn-danger float-lg-right">Delete</a>

                            <!-- likes -->
                            <div class="badge bg-success " style="width: 6rem; color: white; margin-left: 1px">
                               @post.Likes likes.
                            </div>
                        </div>

                        <!-- time update trip -->
                        <div class="card-footer">
                            <small class="text-muted">@post.PostDate.ToLongDateString()</small>
                            <div class="text-muted">
                                @{
                                    if (@post.Status.Equals("Approved"))
                                    {
                                        <small class="text-success">Now In Wall ❤😊</small>
                                    }
                                    else if (@post.Status.Equals("Refused"))
                                    {
                                        <small class="text-danger">Refused as @post.RefuseMessage</small>

                                    }
                                    else
                                    {
                                        <small class="text-info">Now in review.</small>
                                    }
                                }
                            </div>
                        </div>

                    </div>
                </div>
         }
        </div>
    }
    else
    {
        <div class="is-empty">
            <h3>No Posts history..! 🤗👀</h3>
            <p>But You Can Publish your first Trip Post right now ❤🐱‍🏍😃 </p>
            @Html.ActionLink("Let's Publish a Trip Post", "CreatePost", null, new { @class = "btn btn-primary" })
        </div>
    }

    </section>

<!-- end factory history page -->


<script type="text/javascript">
    function likePost(post) {
        post.classList.toggle("likedBtn");

    }
</script>
